<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundwhite">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="30dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile_default_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgView"
            android:layout_marginTop="60dp"
            android:text="Name"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textName"
            android:layout_alignStart="@+id/textName"
            android:layout_alignRight="@+id/textName"
            android:layout_alignEnd="@+id/textName"
            android:layout_below="@+id/textName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textName"
            android:layout_alignStart="@+id/textName"
            android:layout_alignRight="@+id/textName"
            android:layout_alignEnd="@+id/textName"
            android:layout_below="@+id/textEmail"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginTop="30dp"
            android:text="Town"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textName"
            android:layout_alignStart="@+id/textName"
            android:layout_alignRight="@+id/textName"
            android:layout_alignEnd="@+id/textName"
            android:layout_below="@+id/textTown"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textName"
            android:layout_alignStart="@+id/textName"
            android:layout_alignRight="@+id/textName"
            android:layout_alignEnd="@+id/textName"
            android:layout_below="@+id/town"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="30dp"
            android:textSize="18dp"
            android:text="Options"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/layoutOptions"
            android:layout_below="@+id/textOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Option1"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/my_button_chat"/>
            <Button
                android:id="@+id/buttonOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Option2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/my_button_chat"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>