<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundwhite">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <android.bg.ro.boardgame.forms.SquareImageView
            android:id="@+id/imageEvent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/game_event" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageEvent"
            android:layout_marginTop="30dp"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textTitle"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textUserCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="User Creator"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/userCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textUserCreator"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/userCreator"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Description"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textDescription"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/description"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Address"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textAddress"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/address"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Location"
            android:textColor="#ffffff"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textLocation"
            tools:context=".EventCreatorMapsActivity" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/map"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Date"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textDate"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/date"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Time"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/timeHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textTime"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textPub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/timeHours"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Pub"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textPub"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textMaxSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/pub"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Max Seats"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/maxSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textMaxSeats"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/maxSeats"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Status"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textStatus"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="Participant"/>

        <TextView
            android:id="@+id/textParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/status"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Participants"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/layoutListParticipants"
            android:layout_width="match_parent"
            android:layout_below="@+id/textParticipants"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textUserRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/layoutListParticipants"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="User Requests"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/layoutListRequests"
            android:layout_width="match_parent"
            android:layout_below="@+id/textUserRequests"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listRequests"
                android:layout_below="@+id/textUserRequests"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textInviteFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/layoutListRequests"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Invite Friends"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/inviteFriendsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInviteFriends"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button_chat"
            android:text="Friends"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textInvited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/inviteFriendsButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Invited Friends"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/invited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textInvited"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:text="None"
            android:layout_marginTop="5dp"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/textGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/invited"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Games"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_below="@+id/textGames"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="1"
            android:layout_marginTop="5dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/reservationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/games"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button_signup"
            android:text="Make Reservation"
            android:textAllCaps="false"
            android:textColor="#c64040" />

    </RelativeLayout>
</ScrollView>